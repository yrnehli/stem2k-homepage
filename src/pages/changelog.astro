---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import Hero from "../components/Hero.astro";
import Pricing from "../components/Pricing.astro";
import Features from "../components/Features.astro";
import Support from "../components/Support.astro";
import PWA from "../components/PWA.astro";
---

<Layout>
  <div class="min-h-dvh max-w-screen text-white">
    <Nav />
    <div class="flex flex-col items-center justify-center my-12 px-8">
      <div class="max-w-5xl w-full flex flex-col gap-y-8">
        <h1 class="text-3xl font-bold">Changelog</h1>

        <div class="flex flex-col gap-y-2">
          <div>
            <h2 class="text-xl font-bold">1.3.2</h2>
            <p class="text-gray-300">February 28, 2026</p>
          </div>
          <ul class="list-disc list-inside pl-2">
            <li>Added "Appears On" section to artist pages</li>
          </ul>
        </div>

        <div class="flex flex-col gap-y-2">
          <div>
            <h2 class="text-xl font-bold">1.3.1</h2>
            <p class="text-gray-300">February 25, 2026</p>
          </div>
          <ul class="list-disc list-inside pl-2">
            <li>Bug fixes</li>
          </ul>
        </div>

        <div class="flex flex-col gap-y-2">
          <div>
            <h2 class="text-xl font-bold">1.3.0</h2>
            <p class="text-gray-300">February 15, 2026</p>
          </div>
          <ul class="list-disc list-inside pl-2">
            <li>Added support for playlist folders</li>
          </ul>
        </div>

        <div class="flex flex-col gap-y-2">
          <div>
            <h2 class="text-xl font-bold">1.2.8</h2>
            <p class="text-gray-300">February 13, 2026</p>
          </div>
          <ul class="list-disc list-inside pl-2">
            <li>
              Fix background colour when scrolling out of bounds (thanks Zsolt)
            </li>
          </ul>
        </div>

        <div class="flex flex-col gap-y-2">
          <div>
            <h2 class="text-xl font-bold">1.2.7</h2>
            <p class="text-gray-300">February 11, 2026</p>
          </div>
          <ul class="list-disc list-inside pl-2">
            <li>Bug fixes</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</Layout>
